// tsconfig.json (or tsconfig.app.json)
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "jsx": "preserve",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "types": [
      "vite/client",
      "node",
      "unplugin-vue-router/client"
    ],
    "include": [
      "src/**/*.ts",
      "src/**/*.vue",
      "src/typed-router.d.ts"
    ]
  }
}
